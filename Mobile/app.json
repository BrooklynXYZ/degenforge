{
    "expo": {
        "name": "Mobile",
        "slug": "Mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "scheme": "ghala",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.ghala.app",
            "associatedDomains": [
                "applinks:ghala.app",
                "applinks:*.ghala.app",
                "applinks:ghala.app",
                "applinks:*.ghala.app"
            ],
            "infoPlist": {
                "NSFaceIDUsageDescription": "Ghala uses Face ID to securely authenticate and unlock your account.",
                "NSBiometricAuthUsageDescription": "Ghala uses biometric authentication to provide quick and secure access to your account.",
                "LSApplicationQueriesSchemes": [
                    "phantom",
                    "solflare",
                    "trust",
                    "rainbow",
                    "metamask",
                    "wc",
                    "phantom",
                    "solflare",
                    "trust",
                    "rainbow",
                    "metamask",
                    "wc"
                ]
            }
        },
        "android": {
            "package": "com.ghala.app",
            "adaptiveIcon": {
                "foregroundImage": "./assets/logo.png",
                "backgroundColor": "#000000"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false,
            "permissions": [
                "USE_BIOMETRIC",
                "USE_FINGERPRINT",
                "android.permission.USE_BIOMETRIC",
                "android.permission.USE_FINGERPRINT",
                "USE_BIOMETRIC",
                "USE_FINGERPRINT",
                "android.permission.USE_BIOMETRIC",
                "android.permission.USE_FINGERPRINT"
            ],
            "intentFilters": [{
                    "action": "VIEW",
                    "autoVerify": true,
                    "data": [{
                            "scheme": "https",
                            "host": "ghala.app",
                            "pathPrefix": "/"
                        },
                        {
                            "scheme": "https",
                            "host": "*.ghala.app"
                        }
                    ],
                    "category": ["BROWSABLE", "DEFAULT"]
                },
                {
                    "action": "VIEW",
                    "data": [{
                        "scheme": "ghala"
                    }],
                    "category": ["BROWSABLE", "DEFAULT"]
                },
                {
                    "action": "VIEW",
                    "autoVerify": true,
                    "data": [{
                            "scheme": "https",
                            "host": "ghala.app",
                            "pathPrefix": "/"
                        },
                        {
                            "scheme": "https",
                            "host": "*.ghala.app"
                        }
                    ],
                    "category": ["BROWSABLE", "DEFAULT"]
                },
                {
                    "action": "VIEW",
                    "data": [{
                        "scheme": "ghala"
                    }],
                    "category": ["BROWSABLE", "DEFAULT"]
                }
            ]
        },
        "web": {
            "output": "static"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/logo.png",
                    "backgroundColor": "#000000",
                    "resizeMode": "contain"
                }
            ],
            "expo-secure-store",
            "expo-local-authentication"
        ],
        "splash": {
            "image": "./assets/logo.png",
            "backgroundColor": "#000000",
            "resizeMode": "contain"
        },
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": true,
            "tsconfigPaths": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "e50a2f68-c5ae-4a31-aced-a2ff2b9fe017"
            }
        },
        "runtimeVersion": {
            "policy": "appVersion"
        },
        "updates": {
            "url": "https://u.expo.dev/e50a2f68-c5ae-4a31-aced-a2ff2b9fe017"
        }
    }
}