{
    "cli": {
        "version": ">= 13.2.0",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "channel": "development",
            "ios": {
                "simulator": true,
                "buildConfiguration": "Debug"
            },
            "android": {
                "buildType": "apk"
            },
            "env": {
                "NODE_ENV": "development"
            }
        },
        "preview": {
            "distribution": "internal",
            "channel": "preview",
            "ios": {
                "simulator": false,
                "buildConfiguration": "Release"
            },
            "android": {
                "buildType": "apk"
            },
            "env": {
                "NODE_ENV": "production",
                "EXPO_PUBLIC_ICP_HOST": "https://icp-api.io"
            }
        },
        "production": {
            "channel": "production",
            "ios": {
                "buildConfiguration": "Release"
            },
            "android": {
                "buildType": "app-bundle"
            },
            "env": {
                "NODE_ENV": "production",
                "EXPO_PUBLIC_ICP_HOST": "https://icp-api.io"
            }
        },
        "production-apk": {
            "extends": "production",
            "android": {
                "buildType": "apk"
            }
        }
    },
    "submit": {
        "production": {}
    }
}