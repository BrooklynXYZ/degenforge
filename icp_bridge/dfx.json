{
  "version": 1,
  "canisters": {
    "btc_handler": {
      "type": "rust",
      "package": "btc_handler_backend",
      "candid": "src/btc_canister/btc_handler.did",
      "source": ["src/btc_canister"]
    },
    "bridge_orchestrator": {
      "type": "rust",
      "package": "bridge_orchestrator_backend",
      "candid": "src/bridge_canister/bridge.did",
      "source": ["src/bridge_canister"]
    },
    "solana_canister": {
      "type": "rust",
      "package": "solana_handler_backend",
      "candid": "src/solana_canister/solana_rpc.did",
      "source": ["src/solana_canister"]
    },
    "evm_rpc": {
      "type": "custom",
      "candid": "https://raw.githubusercontent.com/dfinity/evm-rpc-canister/refs/heads/main/candid/evm_rpc.did",
      "remote": {
        "id": {
          "ic": "7hfb6-caaaa-aaaar-qadga-cai"
        }
      }
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    },
    "bitcoin": {
      "enabled": true,
      "network": "testnet"
    },
    "schnorr": {
      "enabled": true
    }
  },
  "networks": {
    "local": {
      "bind": "0.0.0.0:4943",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://icp-api.io"],
      "type": "persistent"
    }
  }
}

